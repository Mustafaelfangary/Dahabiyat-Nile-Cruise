<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production domain configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">dahabiyatnilecruise.com</domain>
        <domain includeSubdomains="true">www.dahabiyatnilecruise.com</domain>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system"/>
        </trust-anchors>
        <!-- Enable certificate pinning for extra security -->
        <pin-set expiration="2025-12-31">
            <!-- Add your SSL certificate pins here for production -->
            <!-- You can get these by running: openssl s_client -connect www.dahabiyatnilecruise.com:443 | openssl x509 -pubkey -noout | openssl rsa -pubin -outform der | openssl dgst -sha256 -binary | openssl enc -base64 -->
        </pin-set>
    </domain-config>
    
    <!-- Development and testing configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost for development -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
    </domain-config>
    
    <!-- Debug configuration for testing -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user-added certificates for debugging -->
            <certificates src="user"/>
            <certificates src="system"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>
